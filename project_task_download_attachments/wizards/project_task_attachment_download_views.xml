<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="project_task_attachment_download_action" model="ir.actions.act_window">
        <field name="name">Descargar adjuntos</field>
        <field name="res_model">project.task.attachment.download</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="project_task_attachment_download_form" model="ir.ui.view">
        <field name="name">Descargar adjuntos</field>
        <field name="model">project.task.attachment.download</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="content" filename="name" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
