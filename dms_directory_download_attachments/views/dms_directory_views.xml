        <field name="model">dms.directory</field>
        <field name="inherit_id" ref="dms.view_dms_directory_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_dropdown_kanban')]/div[hasclass('dropdown-menu')]/div/div[hasclass('mk_directory_kanban_actions')]/h6" position="after">
